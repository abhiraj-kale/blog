<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home</title>
  <style>
    .parent{
      display: flex;
      flex-wrap: wrap;
      height: 100vh;
      justify-content: space-around;
      align-items: center;
    }
    form{
      display: flex; 
      flex-flow: column;
    }
  </style>
</head>
<body>
  <!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<!-- jQuery library -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<!-- Popper JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

<!-- Latest compiled JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


  <div class="container"> 
    <div class="parent">
        <div>
            <form action="/signup" method="post">
                <h1>Sign Up</h1>
                <h3>Name</h3>
                <input type="text" placeholder="username" name="username" required id="username" minlength="4">
                <h3>Email</h3>
                <input type="email" placeholder="email" name="email" id="mail">
                <h3>Password</h3>
                <input type="password" name="password" placeholder="password" required minlength="6">
                <br>
                <input class="btn btn-primary" type="submit" value="Sign Up">
          </form>
        </div>
        <div>
            <form action="/login" method="post">
                <h1>Log in</h1>
                <h3>Name</h3>
                <input type="text" name="username" placeholder="username/email" required>
                <h3>Password</h3>
                <input type="password" name="password" name="password" placeholder="password" required>
                <br>
                <input class="btn btn-primary" type="submit" value="Login" />
          </form>
        </div>
     
    </div>
  </div>


  </form>
<script>
    $('#username').keyup(function(){
        $(this).val($(this).val().replace(/\s/g, ''))
    })
</script>
</body>
</html>
